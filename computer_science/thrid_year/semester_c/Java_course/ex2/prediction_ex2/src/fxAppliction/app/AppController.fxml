<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxAppliction.app.AppController">
   <top>
      <fx:include fx:id="headerComponent" source="../headerComponent/header.fxml" />
   </top>
   <center>
      <TabPane fx:id="tabsContainer" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Details">
               <content>
                  <fx:include fx:id="detailsComponent" source="../detailsTabComponent/Details.fxml" />
               </content>
            </Tab>
          <Tab text="New Execution">
               <content>
                  <fx:include fx:id="newExecComponent" source="../newExecTabComponent/NewExecution.fxml" />
               </content>
            </Tab>
            <Tab text="Results">
               <content>
                  <fx:include fx:id="resultsComponent" source="../resultTabComponent/Results.fxml" />
               </content>

            </Tab>
        </tabs>
      </TabPane>
   </center>




</BorderPane>
